<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Tools.tools_Convert_KhoiLuong">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="#F3EEEE"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtChuyenDoi2"
            android:layout_width="344dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Nhập số muốn đổi"
            android:inputType="number"
            android:textSize="30dp"
            android:textStyle="italic" />

        <Spinner
            android:id="@+id/spNhap2"
            android:layout_width="143dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:background="#F3EEEE"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnChuyenDoi2"
            android:layout_width="613dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#C7C2C3"
            app:srcCompat="@drawable/arrowicon64" />

        <Spinner
            android:id="@+id/spDoi2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="#F5EDAA"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtKetQua2"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:background="#F5EDAA"
            android:hint="Kết quả sẽ hiện ỡ đây"
            android:textSize="20dp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="332dp"
        android:background="#F3EEEE"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="145dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Trọng lượng biểu kiến là sức nặng của vật được thể hiện qua giá trị đo của cân lò xo hay lực kế lò xo. Nó đặc trưng cho lực nén của vật lên mặt sàn hay lực căng do vật gây ra lên lò xo của lực kế khi treo vật vào. Chính trọng lượng biểu kiến (chứ không phải trọng lực) là yếu tố tạo ra cảm giác về sự nặng nhẹ của cơ thể.  Nhập số Kilôgam (kg) bạn muốn chuyển đổi trong hộp văn bản, để xem kết quả trong bảng."
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/scaleicon48" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"></LinearLayout>

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="67dp"
        android:layout_height="62dp"
        android:layout_gravity="right"
        android:background="#00C09A9A"
        app:srcCompat="@drawable/backiconyellow48" />

</LinearLayout>